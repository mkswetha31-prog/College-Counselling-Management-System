  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #e0f7fa, #ffffff);
      padding: 40px 10px;
      display: flex;
      justify-content: center;
    }

    form {
      background-color: #ffffff;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 700px;
    }

    h2 {
      text-align: center;
      color: #006064;
      margin-bottom: 30px;
    }

    label {
      font-weight: 600;
      display: block;
      margin-top: 15px;
      margin-bottom: 6px;
      color: #333;
    }

    input[type="text"],
    input[type="date"],
    input[type="number"],
    input[type="email"],
    input[type="tel"],
    select {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 6px;
      box-sizing: border-box;
      margin-bottom: 10px;
    }

    input[type="file"] {
      padding: 8px 10px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #fafafa;
    }

    button[type="submit"] {
      width: 100%;
      padding: 12px;
      background-color: #00796b;
      color: white;
      font-size: 18px;
      border: none;
      border-radius: 8px;
      margin-top: 20px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
      background-color: #004d40;
    }

    @media (max-width: 600px) {
      form {
        padding: 20px;
      }
      h2 {
        font-size: 22px;
      }
    }
  </style>

  <script>
    function updatePreferences() {
      const selects = [
        document.querySelector("select[name='preference1']"),
        document.querySelector("select[name='preference2']"),
        document.querySelector("select[name='preference3']")
      ];
      const selectedValues = selects.map(select => select.value);
      selects.forEach((select, index) => {
        const currentValue = select.value;
        Array.from(select.options).forEach(option => {
          option.disabled = false;
          if (option.value && selectedValues.includes(option.value) && option.value !== currentValue) {
            option.disabled = true;
          }
        });
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      const selects = document.querySelectorAll("select[name^='preference']");
      selects.forEach(select => {
        select.addEventListener("change", () => updatePreferences(select));
      });
      updatePreferences();
    });
  </script>
</head>
